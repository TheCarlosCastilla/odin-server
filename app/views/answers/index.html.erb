<h1>Welcome to the list of Odin Answers</h1>

<table class="table table-hover">
  <tr>
    <th>Row ID</th>
    <th>Time</th>
    <th>User ID</th>
    <th>Question ID</th>
    <th>Choice ID</th>
  </tr>

  <% @answers.each do |answer| %>
    <tr>
      <td><%= answer.id %></td>
      <td><%= answer.time %></td>
      <td><%= answer.user_id %></td>
      <td>Question #<%= answer.question_id %></td>
      <td>Choice #<%= answer.choice_id %></td>
  <% end %>
</table>

<p>
  <%= link_to 'Home', '/', class: 'btn btn-primary' %>
</p>