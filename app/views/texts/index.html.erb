<h1>Welcome to the list of Odin Interactions: Texts</h1>

<table class="table table-hover">
  <tr>
    <th>Row ID</th>
    <th>User ID</th>
    <th>Peer ID</th>
    <th>Time</th>
    <th>Message</th>
    <th>Message Type</th>
  </tr>

  <% @texts.each do |text| %>
    <tr>
      <td><%= text.id %></td>
      <td><%= text.user_id %></td>
      <td><%= text.peer_id %></td>
      <td><%= text.time %></td>
      <td><%= text.duration %></td>
      <td><%= text.call_type %></td>
      
    </tr>
  <% end %>
</table>

<p>
  <%= link_to 'Home', '/', class: 'btn btn-primary' %>
</p>
